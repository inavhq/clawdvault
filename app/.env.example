# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Prisma (Supabase connection)
DATABASE_URL=postgresql://postgres.[project-id]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres.[project-id]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# Solana
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
# Platform wallet secret key (base58 encoded) - required for custodial operations
# PLATFORM_WALLET_SECRET=your-base58-encoded-secret-key

# Development - Show age gate in development mode (default: hidden in dev)
# Set to true to test the age gate during development
# NEXT_PUBLIC_SHOW_AGE_GATE=true
